<?xml version="1.0" encoding="utf-8"?>
<Project ToolsVersion="3.5" DefaultTargets="Build" xmlns="http://schemas.microsoft.com/developer/msbuild/2003">
	<PropertyGroup>
		<GenDir>$(MSBuildProjectDirectory)\..\..\Gen</GenDir>
		<MSBuildCommunityTasksPath>..\MSBuildCommunityTasks</MSBuildCommunityTasksPath>
		<SandcastleHelpFileBuilderPath>C:\Program Files\EWSoftware\Sandcastle Help File Builder</SandcastleHelpFileBuilderPath>
	</PropertyGroup>
	<PropertyGroup>
    <Configuration Condition=" '$(Configuration)' == '' ">Debug</Configuration>
    <Platform Condition=" '$(Platform)' == '' ">AnyCPU</Platform>
    <ProductVersion>9.0.20706</ProductVersion>
    <SchemaVersion>2.0</SchemaVersion>
    <ProjectGuid>{FEEA17A2-ED5A-4543-A07E-25160C1130D6}</ProjectGuid>
    <OutputType>Library</OutputType>
    <AppDesignerFolder>Properties</AppDesignerFolder>
    <RootNamespace>Kent.Boogaart.Converters.Build</RootNamespace>
    <AssemblyName>Kent.Boogaart.Converters.Build</AssemblyName>
    <TargetFrameworkVersion>v3.0</TargetFrameworkVersion>
    <FileAlignment>512</FileAlignment>
  </PropertyGroup>
  <PropertyGroup Condition=" '$(Configuration)|$(Platform)' == 'Debug|AnyCPU' ">
    <DebugSymbols>true</DebugSymbols>
    <DebugType>full</DebugType>
    <Optimize>false</Optimize>
    <OutputPath>bin\Debug\</OutputPath>
    <DefineConstants>DEBUG;TRACE</DefineConstants>
    <ErrorReport>prompt</ErrorReport>
    <WarningLevel>4</WarningLevel>
  </PropertyGroup>
  <PropertyGroup Condition=" '$(Configuration)|$(Platform)' == 'Release|AnyCPU' ">
    <DebugType>pdbonly</DebugType>
    <Optimize>true</Optimize>
    <OutputPath>bin\Release\</OutputPath>
    <DefineConstants>TRACE</DefineConstants>
    <ErrorReport>prompt</ErrorReport>
    <WarningLevel>4</WarningLevel>
  </PropertyGroup>
  <ItemGroup>
    <Reference Include="System" />
    <Reference Include="System.Data" />
    <Reference Include="System.Xml" />
  </ItemGroup>
  <ItemGroup>
    <Compile Include="Properties\AssemblyInfo.cs" />
  </ItemGroup>
	<Import Project="$(MSBuildBinPath)\Microsoft.CSharp.targets" />
	<!-- Required Import to use MSBuild Community Tasks -->
	<Import Project="..\..\Lib\MSBuildCommunityTasks\MSBuild.Community.Tasks.Targets"/>
	<Target Name="BeforeBuild">
	</Target>
	<Target Name="AfterBuild">
		<CallTarget Targets="GenerateDoc;CreateZips" Condition="'$(Configuration)' == 'Release'" />
	</Target>

	<Target Name="CreateZips">
    <GetAssemblyIdentity AssemblyFiles="..\Kent.Boogaart.Converters\$(OutputPath)\Kent.Boogaart.Converters.dll">
      <Output TaskParameter="Assemblies" ItemName="AssemblyIdentity" />
    </GetAssemblyIdentity>
    <CreateProperty Value="@(AssemblyIdentity -> '%(Version)')">
      <Output TaskParameter="Value" PropertyName="Version" />
    </CreateProperty>
    
		<MakeDir Directories="$(GenDir)" Condition="!Exists('$(GenDir)')" />
		<RemoveDir Directories="$(GenDir)\Temp"/>
		<MakeDir Directories="$(GenDir)\Temp" Condition="!Exists('$(GenDir)\Temp')" />

		<CreateItem Include="..\..\**\*.*" Exclude="..\..\**\*.suo;..\..\**\*.csproj.user;..\..\**\*.gpState;..\..\**\bin\**;..\..\**\obj\**;..\..\**\.svn\**;..\..\Gen\**;..\..\TheCodeProject\**">
			<Output ItemName="Source" TaskParameter="Include"/>
		</CreateItem>
		<Zip ZipFileName="$(GenDir)\WPFConverters-$(Version)-src.zip" WorkingDirectory="..\..\" ZipLevel="9" Files="@(Source)"/>

		<!-- collect binaries into one place -->
		<CreateItem Include="..\Kent.Boogaart.Converters.Examples\$(OutputPath)\*.*;..\Kent.Boogaart.Converters.UnitTest\$(OutputPath)\*.*" Exclude="..\Kent.Boogaart.Converters.Examples\$(OutputPath)\*vshost*.*;..\Kent.Boogaart.Converters.UnitTest\$(OutputPath)\Coverage.log">
			<Output ItemName="Files" TaskParameter="Include"/>
		</CreateItem>

		<Copy SourceFiles="@(Files)" DestinationFolder="$(GenDir)\Temp" />

		<CreateItem Include="$(GenDir)\Temp\*.*">
			<Output ItemName="Binaries" TaskParameter="Include"/>
		</CreateItem>
		<Zip ZipFileName="$(GenDir)\WPFConverters-$(Version)-bin.zip" WorkingDirectory="$(GenDir)\Temp\" ZipLevel="9" Files="@(Binaries)"/>
		
		<CreateItem Include="$(GenDir)\WPFConverters.chm">
			<Output ItemName="DocFiles" TaskParameter="Include"/>
		</CreateItem>
		<Zip ZipFileName="$(GenDir)\WPFConverters-$(Version)-doc.zip" WorkingDirectory="$(GenDir)" ZipLevel="9" Files="@(DocFiles)"/>
	</Target>
	
  <Target Name="GenerateDoc">
    <Error Text="Could not find Sandcastle Help File Builder - please check paths and SandcastleHelpFileBuilderPath MSBuild property."
      Condition="!Exists('$(SandcastleHelpFileBuilderPath)\SandcastleBuilderConsole.exe')"/>
      
      <Exec Command='"$(SandcastleHelpFileBuilderPath)\SandcastleBuilderConsole.exe" ..\..\Tools\Sandcastle.shfb'/>
  </Target>
</Project>