<Application xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
             x:Class="Kent.Boogaart.Converters.Examples.SL.App"
             xmlns:local="clr-namespace:Kent.Boogaart.Converters.Examples.SL"
             >
    <Application.Resources>
        <local:ValueProvider x:Key="ValueProvider"/>
        <local:TypeProvider x:Key="TypeProvider"/>
        
        <Style x:Key="ExampleHeader" TargetType="TextBlock">
            <Setter Property="Margin" Value="3"/>
            <Setter Property="TextWrapping" Value="Wrap"/>
            <Setter Property="FontWeight" Value="Bold"/>
        </Style>
    </Application.Resources>
</Application>
